{
  "enabled": true,
  "name": "Auto Git Commit After Task Completion",
  "description": "Automatically commits and pushes code changes to GitHub after agent completes a task",
  "version": "1",
  "when": {
    "type": "agentComplete"
  },
  "then": {
    "type": "runCommand",
    "command": "git add -A && git commit -m \"Task completed: $(date '+%Y-%m-%d %H:%M:%S')\" && git push origin main"
  }
}
